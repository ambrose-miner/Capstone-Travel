package com.controller;
import com.service.FlightService;
import com.service.RideService;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RestController;

import com.bean.Flight;
@CrossOrigin
@RestController
public class FlightController {
	@Autowired
	FlightService flightService;
	
	@GetMapping(value = "/")
	
	
	
	@PostMapping(value = "/bookFlight")
	public String bookFlight(Model mm, Flight r) {//all of this needs to be reworked for Angular rather than Thymeleaf.
		
		 System.out.println("Ride booked");
		 flightService.bookFlight(r);
		 mm.addAttribute("msg1", "Thank you " );
		 mm.addAttribute("msg2", "Your ride has been booked and the Fare will be ");
		return "flight-booking";
	}


}
